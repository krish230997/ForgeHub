@model List<ForgeHub.Models.RFQQuotation>

@{
    ViewData["Title"] = "My Submitted Quotations";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8f9fa;
    }

    .page-header {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-container {
        padding: 0 2rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 0.6rem 1.2rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 6px;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }

    #quotationTable {
        width: 100% !important;
        font-size: 0.9rem;
        background-color: white;
        color: #555;
    }

        #quotationTable th {
            background-color: white;
            color: #666;
            font-weight: 600;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e2e2e2;
            text-align: center;
        }

        #quotationTable td {
            padding: 0.75rem 1rem;
            text-align: center;
            vertical-align: middle;
            border-top: 1px solid #f0f0f0;
            color: #666;
        }

    .badge {
        font-size: 0.85rem;
        padding: 0.45em 0.75em;
        border-radius: 5px;
    }

    .dataTables_wrapper .dataTables_filter input,
    .dataTables_wrapper .dataTables_length select {
        padding: 0.4rem 0.6rem;
        font-size: 0.9rem;
        border-radius: 6px;
        border: 1px solid #ced4da;
        width: auto;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        padding: 0.4rem 0.8rem;
        margin: 0 0.2rem;
        font-size: 0.9rem;
        border-radius: 6px;
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        color: #007bff;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #e2e6ea;
            color: #0056b3;
        }
</style>

<div class="container-fluid table-container mt-4">
    <div class="page-header">
        <h2 style="color: dodgerblue;">My Submitted Quotations</h2>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered" id="quotationTable">
            <thead>
                <tr>
                    <th>RFQ No</th>
                    <th>Indent No</th>
                    <th>Bid No</th>
                    <th>Quoted Amount</th>
                    <th>Delivery Date</th>
                    <th>Payment Terms</th>
                    <th>Remarks</th>
                    <th>Status</th>
                    <th>Submitted On</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var q in Model)
                {
                    <tr>
                        <td>@q.RFQ?.RFQNo</td>
                        <td>@q.RFQ?.IndentNo</td>
                        <td>@q.BidNo</td>
                        <td>@q.QuotedAmount?.ToString("C")</td>
                        <td>@q.DeliveryDate.ToString("dd MMM yyyy")</td>
                        <td>@q.PaymentTerms</td>
                        <td>@q.Remarks</td>
                        <td>
                            @if (q.Status == "Accepted")
                            {
                                <span class="badge bg-success">Accepted</span>
                            }
                            else if (q.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@q.Status</span>
                            }
                        </td>
                        <td>@q.SubmittedDate?.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#quotationTable').DataTable({
                paging: true,
                searching: true,
                lengthChange: true,
                pageLength: 5,
                lengthMenu: [5, 10, 25, 50, 100],
                autoWidth: false,
                language: {
                    lengthMenu: "Rows per page _MENU_",
                    emptyTable: "No quotations submitted"
                }
            });
        });
    </script>
}
