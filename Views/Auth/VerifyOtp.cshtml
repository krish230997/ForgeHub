@{
Layout=null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AIG Forge Hub</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-wrapper {
            display: flex;
            height: 100vh;
            width: 100vw;
            position: relative;
            overflow: hidden;
        }

        .left-section {
            width: 100%;
            background-color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            padding: 0.5rem 4rem 2rem 10rem;
            position: relative;
        }

        .center-image {
            position: absolute;
            top: 50%;
            left: 75%;
            transform: translate(-50%, -50%);
            z-index: 0;
            max-width: 700px;
            height: 90vh;
            border-radius: 20px;
            pointer-events: none;
        }

        .right-section {
            display: none;
        }

        .logo {
            position: absolute;
            top: 20px;
            left: 20px;
            display: flex;
            align-items: center;
            font-weight: bold;
            color: #0056d2;
        }

            .logo img {
                height: 25px;
                margin-right: 8px;
            }

        .login-title {
            font-size: 35px;
            font-weight: 600;
            margin-bottom: 5px;
            text-align: left;
        }

        .login-subtitle {
            font-size: 18px;
            font-weight: normal;
            margin-bottom: 30px;
            color: #333;
        }

        .form-control {
            height: 40px;
            width: 150%;
        }

        .btn-login {
            background-color: #0062ff;
            color: white;
            padding: 10px 30px;
            border: none;
            border-radius: 4px;
            font-weight: 500;
            width: 400px;
            display: block;
            margin-left: calc(50% - 200px + 70px);
        }

        .text-danger {
            margin-top: 10px;
        }

        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .forgot-password {
            font-size: 0.9rem;
            color: #0056d2;
            text-decoration: none;
            margin-left: 30px;
        }

        #loadingOverlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(8px);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .overlay-backdrop {
            text-align: center;
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
        }

        .loader-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            animation: fadeIn 0.3s ease-in;
        }

        .custom-spinner {
            width: 60px;
            height: 60px;
            border: 6px solid transparent;
            border-top: 6px solid #00c3ff;
            border-radius: 50%;
            animation: spin 1s linear infinite, glow 1.5s ease-in-out infinite alternate;
            box-shadow: 0 0 10px #00c3ff, 0 0 20px #00c3ff40;
        }

        .loading-text {
            font-size: 1.2rem;
            font-weight: 500;
            color: #e0f7ff;
            text-shadow: 0 0 5px #0077ff;
        }

            .loading-text small {
                display: block;
                font-size: 0.9rem;
                opacity: 0.8;
                margin-top: 5px;
            }

        /* Spinner Animations */
        @@keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }

        @@keyframes glow {
            from

        {
            box-shadow: 0 0 10px #00c3ff;
        }

        to {
            box-shadow: 0 0 25px #00c3ff, 0 0 35px #00c3ff80;
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }
    </style>
</head>
<body>
   
    <div class="login-wrapper">
        <div class="logo">
            <img src="~/images/gear-icon.png" alt="Logo" />
            AIG Forge Hub
        </div>


        <div class="left-section">
            <div class="login-title">Verify Code</div>
            <div class="login-subtitle">Enter code to access your AIG ForgeHub account</div>

            <form asp-action="VerifyOtp" method="post">
                <div class="mb-3 w-100">
                    <label for="otp" class="form-label">OTP Code</label>
                    <input type="text" name="otp" id="otp" maxlength="6" required class="form-control" placeholder="Enter your 6-digit OTP" />
                </div>

                <div class="form-options w-100">
                    <span></span> <!-- For alignment -->
                    <a href="/Auth/LostOtp" class="forgot-password">Lost your OTP?</a>
                </div>

                <button type="submit" class="btn-login">Verify</button>

                @if (ViewBag.Error != null)
                {
                    <div class="text-danger">@ViewBag.Error</div>
                }
            </form>
        </div>
        <div class="right-section"></div>
        <img src="~/images/otp.png" alt="Login Illustration" class="center-image" />
        </div>
 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <div id="loadingOverlay" style="display: none;">
        <div class="overlay-backdrop">
            <div class="loader-container">
                <div class="custom-spinner"></div>
                <div class="loading-text mt-4">Verifying OTP<br><small>AIG Forge Hub</small></div>
            </div>
        </div>
    </div>

    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            e.preventDefault(); // Stop immediate form submission

            // Show the overlay
            document.getElementById("loadingOverlay").style.display = "flex";

            // Delay form submission for 2 seconds
            setTimeout(() => {
                e.target.submit();
            }, 2000);
        });
    </script>



</body>
</html>
