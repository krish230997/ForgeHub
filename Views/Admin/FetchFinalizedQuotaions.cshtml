@model List<ForgeHub.Models.FinalizedQuotation>

@{
    ViewData["Title"] = "Finalized Quotations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8f9fa;
    }

    .page-header {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-container {
        width: 100%;
        padding: 0 2rem;
    }

    #finalizedTable {
        width: 100% !important;
        font-size: 0.9rem;
        background-color: white;
        border-collapse: collapse;
        color: #555;
    }

        #finalizedTable th {
            background-color: white;
            color: #666;
            font-weight: 600;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e2e2e2;
            text-align: center;
        }

        #finalizedTable td {
            padding: 0.75rem 1rem;
            text-align: center;
            vertical-align: middle;
            border-top: 1px solid #f0f0f0;
            color: #666;
        }

    .dataTables_wrapper .dataTables_filter input,
    .dataTables_wrapper .dataTables_length select {
        padding: 0.4rem 0.6rem;
        font-size: 0.9rem;
        border-radius: 6px;
        border: 1px solid #ced4da;
        width: auto;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        padding: 0.4rem 0.8rem;
        margin: 0 0.2rem;
        font-size: 0.9rem;
        border-radius: 6px;
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        color: #007bff;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #e2e6ea;
            color: #0056b3;
        }
</style>

<div class="container-fluid table-container">
    <div class="page-header">
        <h2 style="color: dodgerblue;">Finalized Quotations</h2>
    </div>

    <div class="table-responsive">
        <table id="finalizedTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>Finalized ID</th>
                    <th>RFQ No</th>
                    <th>Indent No</th>
                    <th>Item Name</th>
                    <th>Vendor Name</th>
                    <th>Quoted Amount</th>
                    <th>Finalized Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.FinalId</td>
                        <td>@f.RFQ?.RFQNo</td>
                        <td>@f.RFQ?.IndentNo</td>
                        <td>@f.RFQ?.ItemName</td>
                        <td>@f.RFQQuotation?.Vendor?.FullName</td>
                        <td>@f.RFQQuotation?.QuotedAmount?.ToString("C")</td>
                        <td>@f.FinalizedDate?.ToString("dd-MMM-yyyy hh:mm tt")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#finalizedTable').DataTable({
                paging: true,
                searching: true,
                lengthChange: true,
                pageLength: 5,
                lengthMenu: [5, 10, 25, 50, 100],
                autoWidth: false,
                language: {
                    lengthMenu: "Rows per page _MENU_",
                    emptyTable: "No finalized quotations available"
                }
            });
        });
    </script>
}
